<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" prefHeight="800.0" prefWidth="1200.0" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.him.controllers.DashboardController">
    <left>
        <VBox fx:id="sideMenu" alignment="TOP_CENTER" prefWidth="250.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="app-title" text="Hospital Information System">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Separator />
                <Button fx:id="btnEmployees" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Employees">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnDoctors" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Doctors" />
                <Button fx:id="btnNurses" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Nurses" />
                <Button fx:id="btnPatients" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Patients" />
                <Button fx:id="btnHospitalizations" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Hospitalizations" />
                <Button fx:id="btnTransfers" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Transfers" />
                <Button fx:id="btnWards" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Wards" />
                <Button fx:id="btnDepartments" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Departments" />
            </children>
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>
</BorderPane>
